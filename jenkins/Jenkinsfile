// jenkins/Jenkinsfile
pipeline {
    agent {
        label 'agent-ssh'
    }
    
    environment {
        PROJECT_NAME = 'movierec'
        BUILD_NUMBER = "${env.BUILD_NUMBER}"
        WORKSPACE_PATH = '/vagrant'
    }
    
    stages {
        stage('Préparation') {
            steps {
                echo '========== Début du Pipeline =========='
                echo "Build Number: ${BUILD_NUMBER}"
                echo "Workspace: ${WORKSPACE_PATH}"
                sh 'docker --version'
                sh 'docker-compose --version'
                sh 'pwd'
                sh 'ls -la'
            }
        }
        
        stage('Vérification Code') {
            steps {
                echo '========== Vérification de la structure du projet =========='
                sh '''
                    cd ${WORKSPACE_PATH}
                    echo "Contenu du répertoire:"
                    ls -la
                    
                    echo "\n=== Structure Frontend ==="
                    ls -la frontend/ || echo "Frontend non trouvé"
                    
                    echo "\n=== Structure Backend ==="
                    ls -la backend/ || echo "Backend non trouvé"
                    
                    echo "\n=== Structure IA Service ==="
                    ls -la ia-service/ || echo "IA Service non trouvé"
                '''
            }
        }
        
        stage('Build Frontend') {
            steps {
                echo '========== Build du Frontend =========='
                dir('frontend') {
                    sh '''
                        docker build -t ${PROJECT_NAME}-frontend:${BUILD_NUMBER} .
                        docker tag ${PROJECT_NAME}-frontend:${BUILD_NUMBER} ${PROJECT_NAME}-frontend:latest
                    '''
                }
            }
        }
        
        stage('Build Backend') {
            steps {
                echo '========== Build du Backend =========='
                dir('backend') {
                    sh '''
                        docker build -t ${PROJECT_NAME}-backend:${BUILD_NUMBER} .
                        docker tag ${PROJECT_NAME}-backend:${BUILD_NUMBER} ${PROJECT_NAME}-backend:latest
                    '''
                }
            }
        }
        
        stage('Build IA Service') {
            steps {
                echo '========== Build du Service IA =========='
                dir('ai-service') {
                    sh '''
                        docker build -t ${PROJECT_NAME}-ia:${BUILD_NUMBER} .
                        docker tag ${PROJECT_NAME}-ia:${BUILD_NUMBER} ${PROJECT_NAME}-ia:latest
                    '''
                }
            }
        }
        
        stage('Tests') {
            parallel {
                stage('Test Backend') {
                    steps {
                        echo '========== Test du Backend =========='
                        sh '''
                            docker run --rm ${PROJECT_NAME}-backend:latest node --version
                        '''
                    }
                }
                
                stage('Test IA Service') {
                    steps {
                        echo '========== Test du Service IA =========='
                        sh '''
                            docker run --rm ${PROJECT_NAME}-ia:latest python --version
                        '''
                    }
                }
            }
        }
        
        stage('Déploiement') {
            steps {
                echo '========== Déploiement des services =========='
                sh '''
                    # Arrêter les containers existants
                    docker-compose down || true
                    
                    # Démarrer les nouveaux containers
                    docker-compose up -d
                    
                    # Attendre que les services démarrent
                    sleep 10
                    
                    # Vérifier l'état des containers
                    docker-compose ps
                '''
            }
        }
        
        stage('Vérification Santé') {
            steps {
                echo '========== Vérification de la santé des services =========='
                sh '''
                    # Vérifier le backend
                    curl -f http://localhost:5000/health || exit 1
                    
                    # Vérifier le service IA
                    curl -f http://localhost:8000/health || exit 1
                    
                    echo "Tous les services sont opérationnels!"
                '''
            }
        }
    }
    
    post {
        success {
            echo '========== Pipeline terminé avec succès! =========='
            sh 'docker images | grep ${PROJECT_NAME}'
        }
        
        failure {
            echo '========== Échec du Pipeline =========='
            sh 'docker-compose logs'
        }
        
        always {
            echo '========== Nettoyage =========='
            sh '''
                # Supprimer les images non utilisées
                docker image prune -f
            '''
        }
    }
}